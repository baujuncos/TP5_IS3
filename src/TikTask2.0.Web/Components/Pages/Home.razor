@page "/"
@inject ApiService Api
@inject NavigationManager Navigation

<PageTitle>TikTask2.0</PageTitle>

@code {
    protected override void OnInitialized()
    {
        if (Api.IsAuthenticated)
        {
            Navigation.NavigateTo("/tasks");
        }
        else
        {
            Navigation.NavigateTo("/login");
        }
    }
}

